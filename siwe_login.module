<?php

/**
 * @file
 * Contains siwe_login.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function siwe_login_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.siwe_login':
      return '<p>' . t('This module provides Ethereum wallet-based authentication for Drupal using the Sign-In with Ethereum (SIWE) standard.') . '</p>';
  }
}

/**
 * Implements hook_permission().
 */
function siwe_login_permission() {
  return [
    'use siwe authentication' => [
      'title' => t('Use SIWE authentication'),
      'description' => t('Allows users to authenticate using Sign-In with Ethereum.'),
    ],
    'manage own ethereum wallet' => [
      'title' => t('Manage own Ethereum wallet'),
      'description' => t('Allows users to manage their own Ethereum wallet address.'),
    ],
  ];
}

/**
 * Implements hook_mail().
 */
function siwe_login_mail($key, &$message, $params) {
  $config = \Drupal::config('siwe_login.mail');

  switch ($key) {
    case 'email_verification':
      // Ensure we have a config value
      $subject = $config->get('email_verification.subject');
      $body = $config->get('email_verification.body');

      // Set defaults if config is missing
      $message['subject'] = $subject ?: t('Verify your email address');
      $message['body'][] = $body ?: t("Please verify your email address by clicking the link below:\n\n[siwe:email-verification-url]");

      // Add custom token replacement
      if (isset($params['verification_url'])) {
        $message['body'][0] = str_replace('[siwe:email-verification-url]', $params['verification_url'], $message['body'][0]);
      }

      break;
  }
}
